{% extends 'TodoMVCTodoMVCBundle:Todo:layout.html.twig' %}

{% block content %}
    <header id="header">
    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_widget(form.title, {'attr': {'class': 'new-todo', 'placeholder': 'What needs to be done?'}}) }}
    {{ form_widget(form.create, {'attr': {'style': 'display:none'}}) }}
    {{ form_end(form) }}
    </header>
{% endblock %}
